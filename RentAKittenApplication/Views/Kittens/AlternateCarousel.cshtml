
<link href="~/Content/altCarousel.css" rel="stylesheet" />
@model IEnumerable<RentAKittenApplication.Models.Kitten>

@{
    ViewBag.Title = "Alternate Carousel";
}
<div class="container">
    <h2>AlternateCarousel</h2>

    
    <!-- no add page linked from here -->
    <p>Return to the main carousel page to add new "kittens".</p>
    <li id="scrolling">

        <ul>
            <li><img src="~/Content/images/cats_header.png" alt="intro" /></li>

            @foreach (var item in Model)
            {
                <li>
                    <img src="@Html.DisplayFor(modelItem => item.KittyImage)" class="img-responsive center-block" alt="a kitten, maybe. A feline, probably." />
                   <!-- <div class="carousel-caption">
                        <h3><span id="carousel-caption-style">@Html.DisplayFor(modelItem => item.KittenName)</span></h3>
                    </div>
                   -->
                </li>
            }
     </ul>

        <!-- Left and right controls 
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        -->

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Kitten Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KittenColor)
            </th>
            <th>
                @Html.ActionLink("Fur Length", "Index", new { sortOrder = ViewBag.FurLengthParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personality)
            </th>
            <!--  <th>
                 @Html.DisplayNameFor(model => model.KittyImage)
             </th> -->
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KittenName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KittenColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FurLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personality)
                </td>
                <!--  <td>
                     @Html.DisplayFor(modelItem => item.KittyImage)
                 </td> -->
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.KittenID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.KittenID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.KittenID })
                </td>
            </tr>
        }



    </table>

    @section scripts {
        <script src="http://itemslide.github.io/dist/itemslide.min.js"></script>
    }
</div>